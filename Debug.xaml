<Window x:Class="wpfApp.Debug"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Debug" Height="450" Width="800"
        ResizeMode="NoResize" SizeToContent="Manual">
    <Window.Resources>
        <!-- Переопределение стиля для запрета изменения ширины колонок -->
        <Style TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="IsEnabled" Value="False"/>
        </Style>
    </Window.Resources>
    <Grid>
        <ListView Grid.Row="0" Grid.Column="0" Name="DebugListView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
            <ListView.View >
                <GridView>
                    <GridViewColumn Header="Операция" DisplayMemberBinding="{Binding operation}" Width="80"/>
                    <GridViewColumn Header="Данные" DisplayMemberBinding="{Binding DataWith}" Width="450"/>
                    <GridViewColumn Header="Результат" DisplayMemberBinding="{Binding ResultOf}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
